@page
@model ProyectoCiclo3.App.Frontend.Pages.ListServicioModel
@{
}

<head>
  <link rel="stylesheet" href="~/css/listEncomienda.css" />

<body>
  <h1>Listado de Servicios</h1>
  <table class="table" style="width:50%;">
      @foreach (var servicio in Model.Servicio)
      {
      <td>
        <div id="card" class="card" style="width: 18rem;
                border-radius: 30px;
                margin-top:30px;">
          <img src="~/img/delivery.png" class="card-img-top" alt="..." style="height: 150px;
                        width: 150px;
                        margin-top:30px;
                        margin-left:70px;">
          <div class="card-body justify-content-center">

            <div class="form-outline mb-4">
              <label for="origen" class="form-label"><a>Origen : @servicio.origen</a></label>
            </div>

            <div class="form-outline mb-4">
              <label for="destino" class="form-label"><a>Destino: @servicio.destino </a></label>
            </div>

            <div class="form-outline mb-4">
              <label for="fecha" class="form-label"><a>Fecha: @servicio.fecha</a></label>
            </div>

            <div class="form-outline mb-4">
              <label for="hora" class="form-label"><a>Hora: @servicio.hora</a></label>
            </div>

            <div class="form-outline mb-4">
              <label for="encomienda" class="form-label"><a>Encomienda: @servicio.encomienda</a></label>
            </div>

            <div class="form-outline mb-4">

              <a id="btnVer" class="btn btn-info" asp-page="./Details" asp-route-servicioId="@servicio.id">Ver</a>

              <a id="btnEditar" class="btn btn-info" id="btn_editar" asp-page="./Edit"
              asp-route-servicioId="@servicio.id"
               asp-route-servicioOrigen="@servicio.origen">Editar</a>
              @* asp-route-servicioOrigen="@servicio.origen"
              asp-route-servicioDestino="@servicio.destino">Editar</a> *@

              <a id="btnEliminar" class="btn btn-info" id="btn_editar" asp-page="./Delete"
              asp-route-servicioId="@servicio.id">Eliminar</a>
            </div>

          </div>
        </div>


      </td>
      }
  </table>
</body>
</head>