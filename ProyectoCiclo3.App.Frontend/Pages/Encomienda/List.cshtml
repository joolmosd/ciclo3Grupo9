@page
@model ProyectoCiclo3.App.Frontend.Pages.ListEncomiendaModel
@{
}
<head>
<link rel="stylesheet" href="~/css/listEncomienda.css" />

<h1>Listado de Encomiendas</h1>
<table class="table" style="width:50%;">
    @foreach (var encomienda in Model.Encomienda)
    {
        <td>
                <div id="card" class="card" style="width: 18rem;
                border-radius: 30px;
                margin-top:30px;">
                    <img src="~/img/package.png" class="card-img-top" alt="..." style="height: 150px;
                        width: 150px;
                        margin-top:30px;
                        margin-left:70px;">
                    <div class="card-body justify-content-center">

                        <div class="form-outline mb-4">
                            <label for="descripcion" class="form-label"><a>Descripcion : @encomienda.descripcion</a></label>
                        </div>

                        <div class="form-outline mb-4">
                            <label for="peso" class="form-label"><a>Peso: @encomienda.peso </a></label>
                        </div>

                        <div class="form-outline mb-4">
                            <label for="tipo" class="form-label"><a>Tipo: @encomienda.tipo</a></label>
                        </div>

                        <div class="form-outline mb-4">
                            <label for="presentacion" class="form-label"><a>Presentacion: @encomienda.presentacion</a></label>
                        </div>

                        <div class="form-outline mb-4">
                            
                                    <a id="btnVer"class="btn btn-info" asp-page="./Details"
                                    asp-route-encomiendaId="@encomienda.id">Ver</a>
                                
                                    <a id="btnEditar" class="btn btn-info" id="btn_editar"
                                    asp-page="./Edit" asp-route-encomiendaId="@encomienda.id">Editar</a>
                                
                                    <a id="btnEliminar"class="btn btn-info" id="btn_editar"
                                    asp-page="./Delete" asp-route-encomiendaId="@encomienda.id">Eliminar</a>
                        </div>

                    </div>
                </div>


            </td>
    }
</table>
</head>